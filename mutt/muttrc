
# IMAP Settings
source ~/Private/conf/imap
set imap_user = emily
set folder    = "imaps://emilyshepherd.me/"
set spoolfile = +INBOX
set imap_check_subscribed
mailboxes +INBOX

# SMTP Settings
set from     = "emily@emilyshepherd.me"
set realname = "Emily Shepherd"
set smtp_url = "smtp://emily@emilyshepherd.me:587/"

# Visual Items
unset markers
set mailcap_path = ~/.mutt/mailcap.rc
auto_view text/html
color quoted blue black

# Composition
set text_flowed = yes

# GPG
source ~/.mutt/gpg.rc
set pgp_use_gpg_agent  = yes
set crypt_autosign     = yes
source ~/Private/conf/encrypt_list.rc

# View HTML in Chrome
macro attach 'V' "<pipe-entry>cat >/tmp/mail.html && chromium /tmp/mail.html && rm /tmp/mail.html<enter>"
macro pager 'V' "v<search>text/html<enter>V"
