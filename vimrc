syntax enable
set autoindent
colorscheme desert
set number
filetype indent on
set incsearch
set ruler
set tabstop=4
set softtabstop=4
set shiftwidth=4
set shiftround
set expandtab
set colorcolumn=72

autocmd FileType make set noexpandtab shiftwidth=8 softtabstop=0
autocmd FileType mail set lw=78 fo+=aw
